<h1>登陆</h1>
<%= form_tag sessions_path, method: :post, class: "form-horizontal" do |f| %>
  <div class="form-group">
    <div class="col-lg-12">邮箱</div>
    <div class="col-lg-12">
      <%= text_field_tag :email, nil, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-12">密码</div>
    <div class="col-lg-12">
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-12">
      <div class="pull-right">
        <a href="<%= new_user_path %>">注册</a>
      </div>
    </div>
  </div>        
  <div class="form-group">
    <div class="col-lg-12">
        <button class="btn  btn-block btn-info" type="submit">登录</button>
    </div>
  </div>
<% end -%>
